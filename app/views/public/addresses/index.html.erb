<!--会員側の配送先画面-->
<h3>配送先登録/一覧</h3>

<%= form_with model: @address do |f| %>
  <div>
    <div>
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code, placeholder: '0000-0000' %>
    </div>
    <div>
      <%= f.label :住所 %>
      <%= f.text_field :shipping_address, placeholder: '山形県山形市香澄町' %>
    </div>
    <div>
      <%= f.label :宛名 %>
      <%= f.text_field :name, placeholder: '佐藤太郎' %>
    </div>
      <%= f.submit "新規登録" %>
  </div>
<% end %>

<hr>

<% @addresses.each do |address| %>
<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.shipping_address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address) %>
        <%= link_to "削除する", address_path(address), method: :delete %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>