<div class="container">
  <div class="row g-3">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class="col-4">
        <div class="col-auto">
        <%= f.label :お名前 %>
          <div class="col-auto">
            姓<%= f.text_field :last_name, autofocus: true, placeholder:"例）令和", class: 'form-control' %>
            名<%= f.text_field :first_name, placeholder:"例）道子", class: 'form-control' %>
          </div>
          <div class="col-auto">
            セイ<%= f.text_field :last_name_kana, placeholder:"例）レイワ", class: 'form-control' %>
            メイ<%= f.text_field :first_name_kana, placeholder:"例）ミチコ", class: 'form-control' %>
          </div>
        </div>

        <div class="col-auto">
            <%= f.label :郵便番号 %>
            <%= f.text_field :postcode, placeholder:"例）00000000", class: 'form-control' %>
        </div>

        <div class="col-auto">
            <%= f.label :住所 %>
            <%= f.text_field :address, placeholder:"例）東京都渋谷区代々木神園町0-0", class: 'form-control'  %>
        </div>

        <div class="col-auto">
            <%= f.label :電話番号, class: "brown-border px-3" %>
            <%= f.text_field :phone_number, placeholder:"例）09012345678", class: 'form-control' %>
        </div>

        <div class="col-auto">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="col-auto">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="col-auto">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-sm btn-success mt-2' %>
        </div>
        </div>
      <% end %>
        <h4>既に登録済みの方</h4>
        <div><%= link_to "こちら", new_customer_session_path, class: 'text-decoration-none' %>からログインしてください</div>
  </div>
</div>