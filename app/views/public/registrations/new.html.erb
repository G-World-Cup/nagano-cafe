<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :お名前 %>
      <div class="field">
        姓<%= f.text_field :last_name, placeholder:"例）令和" %>
        名<%= f.text_field :first_name, placeholder:"例）道子" %>
      </div>
      <div class="field">
        セイ<%= f.text_field :last_name_kana, placeholder:"例）レイワ" %>
        メイ<%= f.text_field :first_name_kana, placeholder:"例）ミチコ" %>
      </div>
    </div>

    <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postcode, placeholder:"例）00000000" %>
    </div>

    <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, placeholder:"例）東京都渋谷区代々木神園町0-0"  %>
    </div>

    <div class="field">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :phone_number, placeholder:"例）09012345678" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
<h4>既に登録済みの方</h4>
<p><%= render "public/shared/links" %>からログインしてください</p>
