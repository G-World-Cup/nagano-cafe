<div class="container my-5">
  <div class="row">
    <div class="offset-3">
      <h2>ログイン</h2>
       <strong class="red-border my-3">会員の方はこちらからログイン</strong>
    </div>
  </div>
  <div class="row my-3">
    <div class="offset-3 col-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-goup">
          <%= f.label :メールアドレス, class: "px-3 pb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-1 col-10" %>
        </div>
        <div class="form-goup mt-3">
          <%= f.label :パスワード, class: "px-3 pb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field offset-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="offset-1 ">
          <%= f.submit "Log in", class: "btn btn-info btn-block mt-2" %>
        </div>
      <% end %>
    </div>
      <div class="offset-3 mt-5">
         <strong class="red-border px-3 pb-1">管理者の方はログインを<%= link_to "こちらへ", new_admin_session_path %></strong>
      </div>
    </div>
      <div class="offset-3">
         <strong class="red-border px-3 pb-1">会員登録がまだお済みでない方は<%= render "public/shared/links" %></strong>
      </div>
    </div>
</div>