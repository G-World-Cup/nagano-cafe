<div class="container my-5">
  <div class="row">
    <div class="offset-3">
       <strong class="red-border px-3 pb-1">会員の方はこちらからログイン</strong>
    </div>
  </div>
  <div class="row">
    <div class="offset-4 col-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-goup mt-5">
          <%= f.label :email, class: "px-3 pb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-goup mt-3">
          <%= f.label :password, class: "px-3 pb-1" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="offset-2 col-8">
          <%= f.submit "Log in", class: "btn btn-outline-info btn-block mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="row">
      <div class="offset-3 mt-5">
         <strong class="red-border px-3 pb-1">管理者の方はログインを<%= link_to "こちらへ", new_admin_session_path %></strong>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="offset-3">
         <strong class="red-border px-3 pb-1">会員登録がまだお済みでない方は<%= render "public/shared/links" %></strong>
      </div>
    </div>
</div>