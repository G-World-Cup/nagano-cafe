<h1>ジャンル一覧・追加</h1>
<div>
  <%= form_with model: @genre,  url: admin_genres_path do |f| %>
  <div>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録" %>
  </div>
  <% end %>
</div>
<div>
 <table class="table">
      <tbody>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する" , edit_admin_genre_path(genre) %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>
