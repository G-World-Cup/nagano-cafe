<div class="container my-5">
  <div class="row">
    <div class="offset-3">
      <h2>Log in</h2>
        <strong class="red-border my-3">管理者の方はこちらからログイン</strong>
      </div>
    </div>
    <div class="row my-3">
      <div class="offset-3 col-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "px-3 pb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-1 col-10" %>
          </div>
          <div class="form-goup mt-3">
            <%= f.label :password, class: "px-3 pb-1" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field offset-1">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="offset-1 ">
            <%= f.submit "Log in", class: "btn btn-info btn-block mt-2 text-white" %>
          </div>
        <% end %>
      </idiv>
    </idiv>
</div>
<%= render "admin/shared/links" %>
