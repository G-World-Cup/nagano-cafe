<h4><%= @customer.last_name + @customer.first_name %>さんの注文履歴</h4>
<div>
  <table>
    <thead>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
        <td><%= order.total_count %></td>
        <td><%= order.order_status_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>