<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
		<div class="col-md-3">
      <%= image_tag @product.product_image, size: "200x150" %>
    </div>
    <div class="col-md-9">
      <table class="table-box">
        <tr>
          <th>商品名</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @product.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <th>税込み価格<br>（税抜価格）</th>
          <td><%= @product.add_tax.to_s(:delimited) %>(<%= @product.price.to_s(:delimited) %>)<span>円</span></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @product.is_active == true %>
              <p class="">販売中</p>
            <% else %>
              <p class="">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
      <br>
      <div class="edit-box">
        <%= link_to "編集する",edit_admin_product_path(@product), class: "btn btn-success " %>
      </div>
    </div>
  </div>
</div>